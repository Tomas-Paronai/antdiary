<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_white"
    android:layout_weight="0.5"
    android:id="@+id/add_data_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tv_name"
                android:gravity="left"
                android:layout_margin="5dp"
                android:id="@+id/tv_name" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@color/text_dark"
                android:background="@color/main"
                android:textColor="@color/text_green"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/et_name" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tv_race"
                android:gravity="left"
                android:layout_margin="5dp"
                android:id="@+id/tv_race" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@color/text_dark"
                android:background="@color/main"
                android:textColor="@color/text_green"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/et_race" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tv_age"
                android:gravity="left"
                android:layout_margin="5dp"
                android:id="@+id/tv_age" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@color/text_dark"
                android:background="@color/main"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="@color/text_green"
                android:layout_gravity="right"
                android:id="@+id/et_age"
                android:inputType="number"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/breed_avatar"
                android:scaleType="fitCenter"
                android:alpha="0.4"
                android:src="@drawable/ic_add_box_black_36dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:text="X"
                android:id="@+id/remove_image"/>

        </RelativeLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button"
            android:layout_gravity="center"
            android:id="@+id/save_button" />
    </LinearLayout>



</RelativeLayout>